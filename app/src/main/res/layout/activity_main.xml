<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img"
        android:scaleType="fitXY"
        android:alpha="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Bangladesh Agricultural University"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="Precision Agriculture Lab"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/phTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pH: 7.5"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/temperatureTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature: 27.6"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tdsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TDS: 42"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/waterTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TDS: 42"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:text="Pump 1 selector   "/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/pump1options" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:text="Select the type"/>

            <Spinner
                android:id="@+id/greateOrLessThanSpn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/graterOrLessThanStr" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:text="Type the value "/>

            <EditText
                android:id="@+id/valueEt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="        "
                android:textStyle="bold"
                android:gravity="left"/>


        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save"
            android:textStyle="bold"
            android:onClick="saveValueClick"
            android:layout_marginBottom="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:text="Pump 2 selector   "/>

            <Spinner
                android:id="@+id/spinnerPump2Spn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/pump2options" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:text="Select the type"/>

            <Spinner
                android:id="@+id/greateOrLessThan2Spn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/graterOrLessThanStr" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:text="Type the value "/>

            <EditText
                android:id="@+id/value2Et"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="        "
                android:textStyle="bold"
                android:gravity="left"/>


        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save"
            android:textStyle="bold"
            android:onClick="save2ValueClick"/>






        <TextView
            android:id="@+id/noticeTv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:text="Alert: Everything is normal"/>









    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>